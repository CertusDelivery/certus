%div.row.history
  %center
    %h4 Logs
  %div.btn-group
    %button.btn.btn-primary.dropdown-toggle{'type' => 'button', 'data-toggle' => 'dropdown'}
      Export Logs
      %span.caret
    %ul.dropdown-menu{role: 'menu'}
      %li
        = link_to 'All', csv_export_admin_logs_url
      %li
        = link_to 'Insert', "#{csv_export_admin_logs_url}?a=create"
      %li
        = link_to 'Update', "#{csv_export_admin_logs_url}?a=update"
      %li
        = link_to 'Destroy', "#{csv_export_admin_logs_url}?a=destroy"
  %hr
  %table.table.table-hover.table-selected
    %thead
      %tr
        %th Time
        %th Model
        %th Action
        %th Success
        %th Code
    %tbody
      - @logs.each do |log|
        %tr{'class' => 'link_button', 'url' => "#{admin_log_url(log)}"}
          %td #{log.created_at}
          %td #{log.model}
          %td #{log.action}
          %td #{log.success}
          %td #{log.code}
  = will_paginate @logs, :renderer => BootstrapLinkRender
