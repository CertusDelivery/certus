
%div{'ng-controller' => 'PicklistCtrl', 'class' => 'row'}
  %div{'class' => 'box'}
    = button_tag 'Download New Order', 'ng-click' => "loadNewOrder()", 'class' => 'btn btn-default'
    = button_tag 'Remove Picked Orders', 'ng-click' => "removePickedOrders()", 'class' => 'btn btn-default'
    = button_tag 'Sort By Location', 'ng-click' => "loadOrdersByLocation()", 'class' => 'btn btn-default'
    = button_tag 'Out of Stock', 'ng-click' => "markAsOutOfStock()", 'class' => 'btn btn-default'
    = button_tag 'Product Detail', 'ng-click' => "productDetail()", 'class' => 'btn btn-default'
  %div{'class' => 'box'}
    = button_tag 'Print Invoice', 'id' =>'print_picking_list', 'class' => 'btn btn-default print_button', 'url'=> "#{ picking_print_deliveries_url() }"
    = button_tag 'Print Packing List', 'id' =>'print_packing_list', 'class' => 'btn btn-default print_button', 'url'=> "#{ print_packing_list_deliveries_url() }"
    = button_tag 'Print Packing List(out of picking list)', 'id' =>'print_packing_list_complete', 'class' => 'btn btn-default print_button', 'url'=> "#{ print_packing_list_deliveries_url(complete:1) }"
    = button_tag 'Delivery History', 'class' => 'btn btn-default print_button', 'url'=> "#{ history_deliveries_url() }"
  %p
    %span#current_time{'ng-click' => "timer()"}
      {{time}}
    |
    Unpicked orders:
    %span#unpicked_order_count{'ng-click' => "refreshUnpickedCount()"}
      {{unpicked_count}}
  %form{ "ng-submit" => "pickProduct(1)", 'class'=>'form-inline'}
    = text_field_tag 'barcode', nil, "ng-model" => "scannedBarcode", "focus-me" => "focusScanner", placeholder: 'Item barcode', 'class' => 'form-control'
    = submit_tag 'Submit Scanner Input', 'class'=>'btn btn-primary'
    .flash
      .error
        {{errorMessage}}
      .notice
        {{notice}}

  %p
  %center
    %h4 Products To Be Picked
  %p
  %hr
  .current_product
    %span Product Name:
    %label {{mySelections[0].product_name}}
    |
    %span Location:
    %label {{mySelections[0].location}}
    |
    %span Picking Progress:
    %label {{mySelections[0].picking_progress}}
    |
    %span Store SKU:
    %label {{mySelections[0].store_sku}}
  #picklist.gridStyle{"ng-grid" => "gridOptions"}
