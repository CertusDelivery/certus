
%div{'ng-controller' => 'PicklistCtrl', 'class' => 'row'}
  = render "header"
  %p
    %span#current_time{'ng-click' => "timer()"}
      {{time}}
    |
    Unpicked orders:
    %span#unpicked_order_count{'ng-click' => "refreshUnpickedCount()"}
      {{unpicked_count}}
  %form{ "ng-submit" => "pickProduct(1)", 'class'=>'form-inline'}
    = text_field_tag 'barcode', nil, "ng-model" => "scannedBarcode", "focus-me" => "focusScanner", placeholder: 'Item barcode', 'class' => 'form-control'
    = submit_tag 'Submit Scanner Input', 'class'=>'btn btn-primary'
    .flash
      .error
        {{errorMessage}}
      .notice
        {{notice}}

  %p
  %center
    %h4 Products To Be Picked
  %p
  %hr
  .current_product
    %span Product Name:
    %label {{mySelections[0].product_name}}
    |
    %span Location:
    %label {{mySelections[0].location}}
    |
    %span Picking Progress:
    %label {{mySelections[0].picking_progress}}
    |
    %span Store SKU:
    %label {{mySelections[0].store_sku}}
  #picklist.gridStyle{"ng-grid" => "gridOptions"}
