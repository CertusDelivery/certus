%header.navbar.navbar-default.navbar-fixed-top{ role: "navigation"}
  %div.container
    /Brand and toggle get grouped for better mobile display
    .navbar-header
      %button{ type: "button", class: "navbar-toggle", data: {toggle: "collapse", target: "#bs-example-navbar-collapse-1"}, "ng-click" => "isCollapsed = !isCollapsed"}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Certus Delivery", "#", class: "navbar-brand"
    /Collect the nav links, forms, and other content for toggling
    %nav.navbar-collapse.bs-navbar-collapse.collapse#bs-example-navbar-collapse-1{collapse: "!isCollapsed"}
      %ul.nav.navbar-nav.navbar-left
        %li{class: active_if_matches(/router$|deliveries$/)}
          = link_to 'Route List', router_deliveries_url
      %ul.nav.navbar-nav.navbar-right
        / %li
        /   = link_to "Edit Profile", edit_admin_user_path(current_user.id)
        %li
          = link_to "Logout", logout_path
      %p.navbar-text.navbar-right
        = "Welcome, #{current_user.full_name}"
