%header.navbar.navbar-default.navbar-fixed-top{ role: "navigation"}
  %div.container
    /Brand and toggle get grouped for better mobile display
    .navbar-header
      %button{ type: "button", class: "navbar-toggle", data: {toggle: "collapse", target: "#bs-example-navbar-collapse-1"}, "ng-click" => "isCollapsed = !isCollapsed"}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Certus Delivery", "#", class: "navbar-brand"
    /Collect the nav links, forms, and other content for toggling
    %nav.navbar-collapse.bs-navbar-collapse.collapse#bs-example-navbar-collapse-1{collapse: "!isCollapsed"}
      %ul.nav.navbar-nav.navbar-left
        %li{class: active_if_matches(/admin$|history/)}
          = link_to 'Delivery History', history_admin_deliveries_url
        %li{class: active_if_matches(/deliveries/)}
          = link_to 'All Picklist', picklist_admin_deliveries_url
        %li.dropdown{class: active_if_matches(/users/)}
          = link_to admin_users_url, class: "dropdown-toggle", data: {toggle: "dropdown"} do
            User
            %b.caret
          %ul.dropdown-menu
            %li{class: active_if_matches(/users$/)}
              = link_to 'List', admin_users_url
            %li{class: active_if_matches(/users\/new/)}
              = link_to 'Create', new_admin_user_url
      %ul.nav.navbar-nav.navbar-right
        / %li
        /   = link_to "Edit Profile", edit_admin_user_path(current_user.id)
        %li
          = link_to "Logout", logout_path
      %p.navbar-text.navbar-right
        = "Welcome, #{current_user.full_name}"
